  "event_flow": {
    "states": [
      "Lead",
      "Proposal",
      "Pending",
      "Confirmed",
      "InPrep",
      "Execution",
      "Closed"
    ],
    "transitions": [
      {
        "from": "Lead",
        "to": "Proposal",
        "trigger": "Sales.qualify"
      },
      {
        "from": "Proposal",
        "to": "Pending",
        "trigger": "Client.reviewed"
      },
      {
        "from": "Pending",
        "to": "Confirmed",
        "trigger": "Deposit.received"
      },
      {
        "from": "Confirmed",
        "to": "InPrep",
        "trigger": "Chef.acknowledge"
      },
      {
        "from": "InPrep",
        "to": "Execution",
        "trigger": "Prep.complete && Day.before"
      },
      {
        "from": "Execution",
        "to": "Closed",
        "trigger": "Event.complete"
      }
    ],
    "guards": {
      "Chef.acknowledge": {
        "timeout_hours": 3,
        "on_timeout": "Echo.notifyPersistent"
      }
    }
  },
  "notifications": {
    "rules": [
      {
        "name": "BEO_Not_Opened",
        "condition": "beo.created && !beo.acknowledged_in_3h",
        "action": "Echo.pushPersistent"
      },
      {
        "name": "PriceChangeImpact",
        "condition": "inventory.price_change && recipe.cost_delta>threshold",
        "action": "Notify.Chef&Purchaser&Finance"
      },
      {
        "name": "MissingRecipe",
        "condition": "menu.item && !recipe.linked",
        "action": "Dashboard.flag('MenuRecipe')"
      }
    ]
  },
